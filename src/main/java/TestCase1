package TEST;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.chrome.ChromeOptions;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

public class TestCase1 {

    public static void main(String[] args) {

        ChromeOptions options = new ChromeOptions();
        options.addArguments("--remote-allow-origins=*"); // Allows all origins for remote connections
        options.addArguments("--disable-extensions"); // Disables extensions that might interfere
        options.addArguments("--start-maximized"); // Starts the browser maximized
        options.addArguments("--disable-infobars"); // Disables the infobar
        options.addArguments("--no-sandbox"); // Add this option for increased stability

        System.setProperty("webdriver.chrome.driver", "C:\\Users\\Admin\\Desktop\\Downloads\\chromedriver.exe");

        WebDriver driver = new ChromeDriver(options);

        try {

            WebDriverWait wait = new WebDriverWait(driver, 10);

            try {
                WebElement chromeSearchOption = wait.until(ExpectedConditions.presenceOfElementLocated(By.xpath("//input[@value='Google']")));
                if (chromeSearchOption != null && !chromeSearchOption.isSelected()) {
                    chromeSearchOption.click();

                    WebElement confirmButton = driver.findElement(By.xpath("//button[text()='OK' or text()='Save']"));
                    confirmButton.click();
                }
            } catch (Exception e) {
                System.out.println("Диалогът за избор на търсачка не беше намерен или вече е избран Chrome.");
            }

            // Navigate to the Demo QA Text Box page
            driver.get("https://demoqa.com/text-box");

            // Find the "Full Name" field
            WebElement fullNameField = driver.findElement(By.id("userName"));
            System.out.println("Полето 'Full Name' намерено: " + fullNameField.isDisplayed());
            System.out.println("Полето 'Full Name' активно: " + fullNameField.isEnabled());
            fullNameField.sendKeys("John Doe");

            // Find the "Email" field
            WebElement emailField = driver.findElement(By.id("userEmail"));
            System.out.println("Полето 'Email' намерено: " + emailField.isDisplayed());
            System.out.println("Полето 'Email' активно: " + emailField.isEnabled());
            emailField.sendKeys("john.doe@example.com");

            // Find the "Current Address" field
            WebElement currentAddressField = driver.findElement(By.id("currentAddress"));
            System.out.println("Полето 'Current Address' намерено: " + currentAddressField.isDisplayed());
            System.out.println("Полето 'Current Address' активно: " + currentAddressField.isEnabled());
            currentAddressField.sendKeys("123 Main St, Springfield");

            // Wait for and click the "Submit" button
            WebElement submitButton = wait.until(ExpectedConditions.elementToBeClickable(By.id("submit")));
            JavascriptExecutor js = (JavascriptExecutor) driver;
            js.executeScript("arguments[0].scrollIntoView(true);", submitButton); // Scroll to the button
            js.executeScript("arguments[0].click();", submitButton); // Click using JavaScript

        } finally {
            // Close the browser
            driver.quit();
        }
    }
}
